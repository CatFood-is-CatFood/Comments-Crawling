<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane alignment="center" hgap="10" stylesheets="@LoginTheme.css" vgap="10" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ch.makery.crawling.view.LoginController">
    <padding>
        <Insets bottom="10" left="25" right="25" top="25" />
    </padding>
   <children>
       <Text fx:id="Login" text="Login" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="0" />
       <Label text="Name:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
       <TextField fx:id="inputName" GridPane.columnIndex="1" GridPane.rowIndex="1" />
       <Label text="Content:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
       <PasswordField fx:id="inputContent" GridPane.columnIndex="1" GridPane.rowIndex="2">
         <tooltip>
            <Tooltip />
         </tooltip></PasswordField>
       <HBox alignment="bottom_right" spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="4">
          <children>
            <CheckBox fx:id="doNotForget" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" prefHeight="36.0" prefWidth="255.0" text="Don't Forget" />
          </children>
       </HBox>
      <HBox prefHeight="100.0" prefWidth="200.0" spacing="70.0" GridPane.columnIndex="1" GridPane.rowIndex="5">
         <children>
              <Button maxHeight="-Infinity" minHeight="-Infinity" onAction="#handleLogin" prefHeight="36.0" text="Login" />
            <Button maxHeight="-Infinity" minHeight="-Infinity" mnemonicParsing="false" onAction="#handleCancel" prefHeight="36.0" text="Cancel" />
         </children>
      </HBox>
   </children>
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints minHeight="10.0" prefHeight="30.0" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" />
   </rowConstraints>
</GridPane>
